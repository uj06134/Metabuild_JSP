<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%
	request.setCharacterEncoding("UTF-8");
%>
<jsp:useBean id="mb" class="myPkg.BoardBean"/>
<jsp:setProperty property="*" name="bb"/>

<jsp:useBean id="mdao" class="myPkg.BoardDao"/>
<%
	int cnt = mdao.updateBoard(bb);
	if (cnt != -1){
		response.sendRedirect("select.jsp");
	}else {
		response.sendRedirect("updateForm.jsp?num=" + bb.getNum()); // 실패했을때 수정할 번호 페이지로 이동
	}
%>