Ex05_for.jsp<br>

<%-- 
<c:forEach var="변수명" begin="시작값" end="끝값" step="증감값" varStatus="상태변수">
   <!-- 반복할 코드 -->
</c:forEach> 
--%>


<c:forEach var="i" begin="1" end="10" step="1" varStatus="status">
	<%-- ${i}/${status.first}/${status.last}/${status.index}/${status.count}<br> --%>
	${i}
	<c:if test="${not status.last}">,</c:if>
	
</c:forEach>

<%
	String[] movieList = {"범죄도시", "쿵푸팬더", "여고괴담"};
	for(int i=0;i<movieList.length;i+=1){
		out.print(movieList[i]+" ");
	}
	out.print("<br>");
	
	for(String movie : movieList){
		out.print(movie + " ");
	}
%>
